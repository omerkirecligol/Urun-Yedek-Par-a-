
@{
    var selectedCont = Url.RequestContext.RouteData.Values["controller"].ToString();

    var selectedAction = Url.RequestContext.RouteData.Values["action"].ToString();

    var selected = selectedCont + "/" + selectedAction;

}


<!DOCTYPE html>
<html lang="en">
<head>
